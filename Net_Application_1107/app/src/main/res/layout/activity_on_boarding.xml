<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".OnBoardingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="장애인 유형" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#000000"
                android:text="을 선택해 주세요." />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="35dp"
                android:button="@null"
                android:padding="15dp"
                android:background="@drawable/ic_circle_gray2"
                android:drawableLeft="@drawable/ic_hidden_size"
                android:drawablePadding="15dp"
                android:textSize="18dp"
                android:text="시각 장애인" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="35dp"
                android:button="@null"
                android:padding="15dp"
                android:background="@drawable/ic_circle_gray2"
                android:drawableLeft="@drawable/ic_disabled_size"
                android:drawablePadding="15dp"
                android:textSize="18dp"
                android:text="지체 장애인" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:button="@null"
                android:padding="15dp"
                android:background="@drawable/ic_circle_gray2"
                android:drawableLeft="@drawable/ic_deaf_size"
                android:drawablePadding="15dp"
                android:textSize="18dp"
                android:text="청각 장애인" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_ractangle_curve_blue"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="시작하기" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>